{
  "author": "Wire",
  "browser": {
    "ws": false
  },
  "dependencies": {
    "axios": "0.16.1",
    "ws": "2.3.1"
  },
  "devDependencies": {
    "@types/node": "7.0.18",
    "@types/ws": "0.0.41",
    "concurrently": "3.4.0",
    "husky": "0.13.4",
    "istanbul": "0.4.5",
    "jasmine": "2.6.0",
    "lint-staged": "3.6.0",
    "optimist": "0.6.1",
    "prettier": "1.4.2",
    "rimraf": "2.6.1",
    "sinon": "1.17.6",
    "sinon-har-server": "0.3.0",
    "typescript": "2.3.2",
    "webpack": "2.5.1",
    "webpack-dev-server": "2.4.5"
  },
  "description": "Wire API Client to send and receive data.",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "yarn prettier",
      "git add"
    ]
  },
  "main": "dist/commonjs/index.js",
  "name": "@wireapp/api-client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wireapp/wire-web-api-client.git"
  },
  "scripts": {
    "clean": "rimraf dist/commonjs",
    "coverage": "istanbul cover --report html ./node_modules/jasmine/bin/jasmine.js",
    "dist": "yarn clean && tsc",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --trailing-comma='all' --no-bracket-spacing --write 'src/**/*.ts'",
    "preversion": "yarn dist && yarn test",
    "start": "yarn clean && concurrently \"tsc -w\" \"yarn watch\"",
    "test": "jasmine",
    "version": "yarn dist",
    "watch": "webpack-dev-server --config webpack.config.js --open"
  },
  "version": "0.0.16"
}
